<% layout("layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col col-8 offset-2">
        <h3>Edit a Listing</h3>

    <form class="needs-validation" method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%=listing.title%>" placeholder="enter title" type="text" class="form-control" required> 
            <div class="invalid-feedback">Please enter valid title</div>
        </div>
        
          <div class="mb-3">
            <label for="title" class="form-label">Description</label> <br>
            <textarea name="listing[description]" placeholder="enter description" required><%=listing.description%></textarea> 
            <div class="invalid-feedback">Please enter valid Description</div>
        </div>

        <div>
            <img src="<%=originalImage%>" alt="image">
        </div>

        <div class="mb-3">
            <label for="title" class="form-label">Image</label>
            <input name="image" value="<%=listing.image.url%>"  placeholder="enter image url" type="file" class="form-control" required>
            <div class="invalid-feedback">Please enter valid image</div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="title" class="form-label">Price</label>
            <input name="listing[price]" value="<%=listing.price%>" placeholder="enter the price"   type="number" class="form-control" required>
            <div class="invalid-feedback">Please enter valid Price</div>
        </div>
         
        <div class="mb-3 col-md-8">
            <label for="title" class="form-label">Country</label>
            <input name="listing[country]" value="<%=listing.country%>" placeholder="enter the country"      type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter valid Country</div>
        </div> 
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Location</label>
            <input name="listing[location]" value="<%=listing.location%>" placeholder="enter the location" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter valid Location</div>
        </div> 


        <button class="btn btn-dark Edit-btn mt-3 mb-3">Edit</button>
    </form>
    </div>
    </div>
</body>
