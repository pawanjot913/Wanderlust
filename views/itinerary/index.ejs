<% layout("layouts/boilerplate") %>
<body>
    
    
<div class="container mt-5">
    <h1>Travel Planner</h1>
    <form action="/itinerary" method="POST">
        <div class="mb-3">
            <label for="destination" class="form-label">Destination</label>
            <input type="text" name="destination" id="destination" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="dates" class="form-label">Dates</label>
            <input type="text" name="dates" id="dates" class="form-control" placeholder="e.g. 2025-12-20 to 2025-12-27" required>
        </div>
        <div class="mb-3">
            <label for="interests" class="form-label">Interests</label>
            <input type="text" name="interests" id="interests" class="form-control" placeholder="e.g. museums, hiking, food">
        </div>
        <button class="btn btn-primary">Generate Itinerary</button>
    </form>
</div>


</body>

