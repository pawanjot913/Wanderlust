        <div class="switch ms-auto">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
            </div>
        </div>
    </div>

    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
<% for(let listing of alllistings){ %>
    <a class="listing-link" href="/listings/<%=listing._id%>">
    <div class="card col listing-card" >
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listings" style="height: 20rem;">
         <div class="card-img-overlay"></div>
        <div class="card-body">
        <p class="card-text"> 
            <b><%=listing.title%> <br></b>
           &#8377; <%=listing.price.toLocaleString("en-IN")%> /night
           <i class="tax-info">&nbsp; &nbsp; +18%GST</i>
        </p>
        </div>
    </div>
    
    </a>
    <% } %>
</div>





</body>

<script>
    const switchToggle = document.getElementById('switchCheckDefault');
    switchToggle.addEventListener('click', function() {
        let taxElements = document.getElementsByClassName('tax-info');
        for(info of taxElements){
            if(info.style.display === 'none' || info.style.display === ''){
                info.style.display = 'inline';
            } else {
                info.style.display = 'none';
            }
        }
       
    });    
    
</script>
