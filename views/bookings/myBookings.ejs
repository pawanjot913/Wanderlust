<% layout("layouts/boilerplate") %>
<body class="bg-gray-100 min-h-screen">


    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold mb-6">My Bookings</h1>

        <% if(bookings.length === 0) { %>
            <p class="text-gray-600">You have no bookings yet. Browse <a href="/listings" class="text-blue-500 underline">listings</a> to book!</p>
        <% } %>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% bookings.forEach(booking => { %>
                <div class="bg-white rounded shadow overflow-hidden">
                    <img src="<%= booking.listing.image?.url || 'https://via.placeholder.com/300x200' %>" alt="<%= booking.listing.title %>" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold mb-2"><%= booking.listing.title %></h2>
                        <p class="text-gray-600 mb-2"><strong>Location:</strong> <%= booking.listing.location %>, <%= booking.listing.country %></p>
                        <p class="text-gray-600 mb-2"><strong>Check-In:</strong> <%= booking.checkIn.toDateString() %></p>
                        <p class="text-gray-600 mb-2"><strong>Check-Out:</strong> <%= booking.checkOut.toDateString() %></p>
                        <p class="text-gray-600 mb-2"><strong>Guests:</strong> <%= booking.guests %></p>
                        <p class="text-gray-600 mb-2"><strong>Total Price:</strong> $<%= booking.totalPrice %></p>
                        <p class="text-gray-600 mb-2"><strong>Status:</strong> 
                            <span class="<%= booking.status === 'confirmed' ? 'text-green-600' : booking.status === 'pending' ? 'text-yellow-600' : 'text-red-600' %> font-semibold">
                                <%= booking.status %>
                            </span>
                        </p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>
