<% layout("layouts/boilerplate") %>

    <body>
        <script>
            let mapToken = '<%=mapToken%>';
            const listing = <%-JSON.stringify(listing)%>;
            

        </script>

        <div class="row  mt-3">
            <div class="col-8 offset-3">
                <h3>Listing details:</h3>

                <div class="card listing-card col-6 offset-3 ">
                    <img src="<%=listing.image.url %>" class="card-img-top show-img" alt="Listing">
                    <div class="card-body">
                        <p class="card-text">

                        <h3>
                            <%=listing.title %>,
                        </h3> <br>
                        <%=listing.description %> <br>
                            &#8377;
                            <%= listing.price.toLocaleString("en-IN")%> <br>
                                <%= listing.location%> <br>
                                    <%= listing.country%>

                                        </p>
                    </div>
                    <div>
                        <% if (CurrUser) { %>
                            <form action="/bookings/<%= listing._id %>" method="POST">
                                <label>Check-in:</label>
                                <input type="date" name="checkIn" required>

                                <label>Check-out:</label>
                                <input type="date" name="checkOut" required>

                                <label>Guests:</label>
                                <input type="number" name="guests" min="1" value="1">

                                <button type="submit">Book Now</button>
                            </form>
                            <% } else { %>
                                <a href="/login">Login to book</a>
                                <% } %>
                    </div>


                    <div class="btns mb-2 ">
                        <%if(CurrUser&& CurrUser._id.equals(listing.owner._id)){%>
                            <form class=" col-2 " method="get" action="/listings/<%=listing._id%>/edit">
                                <button class=" btn btn-dark Edit-btn">edit</button>
                            </form>
                            <form class=" col-5 offset-4" method="post"
                                action="/listings/<%=listing._id%>?_method=delete">
                                <button class="btn btn-dark Edit-btn ">delete</button>
                            </form>
                            <%}%>
                    </div>
                </div>

            </div>
        </div>
        <%if(CurrUser){%>
            <div class="col-8 offset-3">
                <h4> write a review:</h4>

                <form method="POST" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">



                    <fieldset class="starability-slot">
                        <legend>First rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>



                    <!-- <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input name="review[rating]" placeholder="" type="range" min="1" max="5" required
                            style="border: none;" class=" form-range form-control">
                        <div class="invalid-feedback">Please enter valid Rating</div>
                    </div> -->
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea name="review[comment]" rows="5" placeholder="Enter comment" class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">Please Enter Valid Comment</div>
                    </div>

                    <button class="btn btn-dark mb-3">Submit</button>


                </form>
            </div>
            <%}%>
                <% if(listing.reviews.length>0){ %>
                    <div class="row offset-2">
                        <h4>All reviews:</h4>
                        <% for(review of listing.reviews){ %>
                            <div class="card review-card col-5 ms-3 mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        @<%=review.author.username%>
                                    </h5>

                                    <p class="starability-result" data-rating="<%=review.rating%>">

                                    </p>

                                    <p class="card-text">
                                        <%=review.comment%>
                                    </p>

                                    <% if (CurrUser && review.author &&
                                        CurrUser._id.toString()===review.author._id.toString()) { %>
                                        <form method="post"
                                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete">
                                            <button class="btn btn-dark">Delete</button>
                                        </form>
                                        <% } %>
                                </div>
                            </div>
                            <%}%>
                    </div>
                    <% } %>

                        <hr>
                        <div id="map" class=" col-8 offset-4 mb-3"></div>



                        <script src="/js/map.js"></script>
                        





    </body>